{
  "/item/field": {
    "post": {
      "x-mojo-to": "Com::InteractiveInventory::Controllers::Items#modifyItemField",
      "operationId": "modifyItemField",
      "tags": [
        "inventory"
      ],
      "produces": [
        "application/json"
      ],
      "consumes": [
        "application/json"
      ],
      "parameters": [
        {
          "name": "body",
          "in": "body",
          "required": true,
          "description": "Single item field modification data",
          "schema": {
            "type": "object",
            "required": [
              "barcode",
              "fields"
            ],
            "properties": {
              "barcode": {
                "type": "string",
                "description": "The barcode of the item to modify"
              },
              "fields": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                },
                "description": "The fields to update with their new values"
              }
            }
          }
        }
      ],
      "responses": {
        "200": {
          "description": "Item updated successfully",
          "schema": {
            "type": "object",
            "properties": {
              "barcode": {
                "type": "string"
              },
              "status": {
                "type": "integer"
              },
              "success": {
                "type": "string"
              }
            }
          }
        },
        "400": {
          "description": "Missing barcode or fields to update"
        },
        "404": {
          "description": "Item not found"
        }
      }
    }
  },
  "/item/fields": {
    "post": {
      "x-mojo-to": "Com::InteractiveInventory::Controllers::Items#modifyItemFields",
      "operationId": "modifyItemFields",
      "tags": [
        "inventory"
      ],
      "produces": [
        "application/json"
      ],
      "consumes": [
        "application/json"
      ],
      "parameters": [
        {
          "name": "body",
          "in": "body",
          "required": true,
          "description": "Multiple items field modification data",
          "schema": {
            "type": "object",
            "required": [
              "items"
            ],
            "properties": {
              "items": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": [
                    "barcode",
                    "fields"
                  ],
                  "properties": {
                    "barcode": {
                      "type": "string",
                      "description": "The barcode of the item to modify"
                    },
                    "fields": {
                      "type": "object",
                      "additionalProperties": {
                        "type": "string"
                      },
                      "description": "The fields to update with their new values"
                    }
                  }
                }
              }
            }
          }
        }
      ],
      "responses": {
        "200": {
          "description": "Items updated successfully",
          "schema": {
            "type": "object",
            "properties": {
              "results": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "barcode": {
                      "type": "string"
                    },
                    "status": {
                      "type": "integer"
                    },
                    "success": {
                      "type": "string"
                    },
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "400": {
          "description": "Missing items data"
        }
      }
    }
  },
  "/item/checkin": {
    "post": {
      "x-mojo-to": "Com::InteractiveInventory::Controllers::Items#checkInItem",
      "operationId": "checkInItem",
      "tags": [
        "inventory"
      ],
      "produces": [
        "application/json"
      ],
      "consumes": [
        "application/json"
      ],
      "parameters": [
        {
          "name": "body",
          "in": "body",
          "required": true,
          "description": "Item check-in data",
          "schema": {
            "type": "object",
            "required": [
              "barcode",
              "date"
            ],
            "properties": {
              "barcode": {
                "type": "string",
                "description": "The barcode of the item to check in"
              },
              "date": {
                "type": "string",
                "description": "The date of check-in"
              }
            }
          }
        }
      ],
      "responses": {
        "200": {
          "description": "Item checked in successfully",
          "schema": {
            "type": "object",
            "properties": {
              "success": {
                "type": "string"
              }
            }
          }
        },
        "400": {
          "description": "Invalid input"
        },
        "404": {
          "description": "Item not found"
        },
        "500": {
          "description": "Internal server error"
        }
      }
    }
  },
  "/item/resolve_transit": {
    "post": {
      "x-mojo-to": "Com::InteractiveInventory::Controllers::Items#resolveTransit",
      "operationId": "resolveTransit",
      "tags": [
        "inventory"
      ],
      "produces": [
        "application/json"
      ],
      "consumes": [
        "application/json"
      ],
      "parameters": [
        {
          "name": "body",
          "in": "body",
          "required": true,
          "description": "Transit resolution data",
          "schema": {
            "type": "object",
            "required": [
              "barcode"
            ],
            "properties": {
              "barcode": {
                "type": "string",
                "description": "The barcode of the in-transit item"
              },
              "branchCode": {
                "type": "string",
                "description": "The target branch code (defaults to current branch if not provided)"
              }
            }
          }
        }
      ],
      "responses": {
        "200": {
          "description": "Transit resolved successfully",
          "schema": {
            "type": "object",
            "properties": {
              "status": {
                "type": "string"
              },
              "message": {
                "type": "string"
              }
            }
          }
        },
        "400": {
          "description": "Missing barcode or invalid request"
        },
        "404": {
          "description": "Item not found or not in transit"
        },
        "500": {
          "description": "Error resolving transit",
          "schema": {
            "type": "object",
            "properties": {
              "error": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}